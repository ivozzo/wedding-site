      h1: b #{titles.title}
      p #{titles.subtitle}

nav(class="navbar navbar-default navbar-fixed-top")
  div(class="container")
    div(class="navbar-header")
      button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
        span(class="sr-only") Toggle navigation
        span(class="icon-bar")
        span(class="icon-bar")
        span(class="icon-bar")

    div(class="collapse navbar-collapse" id="navbar-collapse")
      ul(class="nav navbar-nav")
        li: a(class="btn menu-font menu-font-hover btn-lg" href="/index#home") Home
        li: a(class="btn menu-font menu-font-hover btn-lg" href="/index#where") Dove
        li: a(class="btn menu-font menu-font-hover btn-lg" href="/index#when") Quando
        li: a(class="btn menu-font menu-font-hover btn-lg" href="/guest/rsvp") Parteciperai?
        li: a(class="btn menu-font menu-font-hover btn-lg" href="mailto:" + site.contact + "?subject=Richiesta%20informazioni") Contattaci
      ul(class="nav navbar-nav navbar-right")
        if session.logged === true
          li(class="dropdown")
            a(class="dropdown-toggle menu-font menu-font-hover" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Amministrazione
              span(class="caret")
            ul(class="dropdown-menu")
              li: a(href="/console") Pagina principale
              li(class="divider")
              li: a(href="/guest") Invitati
              li: a(href="/user") Utenti
              li(class="divider")
              li: a(href="/guest/list") Lista invitati
        else
          li: a(class="btn menu-font menu-font-hover btn-lg" href="/console") Amministrazione
        if session.logged === true
          li(class="drodpown")
            a(class="dropdown-toggle menu-font menu-font-hover" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Ciao, #{session.username}
              span(class="caret")
            ul(class="dropdown-menu")
              li
                div(class="row")
                  div(class="col-md-12 col-lg-12")
                    form(class="form" role="form" method="post" action="/login/exit" id="logout")
                      div(class="btn-group btn-group-lg pull-right" role="group")
                        button(type="submit" value="Invia" class="btn btn-default") Logout
        else
          li(class="dropdown")
            a(class="dropdown-toggle menu-font menu-font-hover" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Login
              span(class="caret")
            ul(class="dropdown-menu" style="padding:5px;")
              li
                div(class="row")
                  div(class="col-md-12 col-lg-12")
                    form(class="form" role="form" method="post" action="/login" id="login")
                      div(class="form-group")
                        label(for="username") Username:
                        input(type="text" class="form-control" id="username" name="Username" required)
                        label(for="password") Password:
                        input(type="password" class="form-control" id="password" name="Password" required)
                      div(class="btn-group btn-group-lg pull-right" role="group")
                        button(type="submit" value="Invia" class="btn btn-default") Login